@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit</h2>

<form id="depositForm">
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" min="1" step="any" required />
    <button type="submit" id="depositBtn">Deposit</button>
</form>

<div id="responseMessage" style="display:none;"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#depositForm').submit(function (event) {
                event.preventDefault();

                var amount = $('#amount').val();

                if (!amount || amount <= 0) {
                    $('#responseMessage').text('Please enter a valid amount.').show();
                    return;
                }

                $('#responseMessage').hide();

                $.ajax({
                    url: '/Transaction/Deposit',
                    type: 'POST',
                    data: {
                        amount: amount
                    },
                    success: function (response) {
                        if (response.status === "Success") {
                            window.location.href = response.paymentUrl;
                        } else {
                            $('#responseMessage').text('Deposit failed: ' + response.message).show();
                        }
                    },
                    error: function () {
                        $('#responseMessage').text('An error occurred while processing your request.').show();
                    }
                });
            });
        });
    </script>
}