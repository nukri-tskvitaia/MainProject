@{
    ViewData["Title"] = "Confirm Payment";
}

<h2>Confirm Payment</h2>

<p>Please confirm your payment.</p>
<form id="confirmForm">
    <button type="submit" id="confirmBtn">Confirm Payment</button>
</form>

<div id="responseMessage" style="display:none;"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#confirmForm').submit(function (event) {
                event.preventDefault();

                var transactionId = '@Model';

                $.ajax({
                    url: '/Payment/Confirm',
                    type: 'POST',
                    data: {
                        transactionId: transactionId
                    },
                    success: function (response) {
                        $('#responseMessage').text(response.message).show();
                    },
                    error: function () {
                        $('#responseMessage').text('An error occurred while confirming the payment.').show();
                    }
                });
            });
        });
    </script>
}